
<table class="table table bordered">

  <tbody>
    <% @lists.each do |list| %>

      <% if list.user == current_user %>

      <% if list.completed %>

      <tr class="table-secondary ">
        <td class="striker"><%= link_to list.description, edit_list_path(list)%></td>     
        <td>
          <center>
            <%= form_for(list) do |f| %>
            <%= f.text_field :description, type:'hidden' %>
            <%= f.text_field :user_id, type:'hidden' %>
            <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
            <%= f.submit "Uncross", class: 'btn btn-outline-danger btn btn-sm' %>
            <% end %>
          </center>
        </td<>
       
        <td><%= button_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark" %></td>
      </tr>

      <% else %>

      <tr>
        <td><%= link_to list.description, edit_list_path(list)%></td> 
        <td>
        <center>
            <%= form_for(list) do |f| %>
            <%= f.text_field :description, type:'hidden' %>
            <%= f.text_field :user_id, type:'hidden' %>
            <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
            <%= f.submit "Cross off", class: 'btn btn-outline-danger btn btn-sm' %>
            <% end %>
          </center>
        
        </td<>
    
        <td><%= button_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-dark" %></td>
      </tr>

      <% end %>

      <% end %>

    <% end %>
  </tbody>
</table>

