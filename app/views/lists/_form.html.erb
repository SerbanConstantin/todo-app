<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :description, class:"form-control", placeholder:"List Name" %>
    
  </div>
  <br/>

  <div class="field">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :list_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    
  </div>
  
  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-warning"%>
  </div>
<% end %>
